<% @blogs.each do |blog|%>
  <div class="blog-list">
    <div class="content">
      <div class="content__image">
        <%= image_tag 'binder.jpeg'%>
      </div>
      <div class="content__right">
        <div class="content__right__top">
          <%= blog.title %>
        </div>
        <div class="content__right__bottom">
          <div class="content__right__bottom--date">
            <%= blog.created_at %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>