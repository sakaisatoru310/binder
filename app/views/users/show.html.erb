<div class="postTitle">
  <%= @user.nickname %>さんの投稿一覧
</div>
<% @blogs.each do |blog| %>
  <div class="content">
    <div class="content__left">
      <div class="content__left--image"></div>
    </div>
    <div class="content__right">
      <div class="content__right__top">
        <%= link_to blog.title, blog_path(blog.id), class: "title" %>
      </div>
      <div class="content__right__name">
        
        <div class="content__right__bottom--date">
          <%= blog.created_at.strftime("%Y年-%m月-%d日%H:%M")  %>
        </div>
      </div>
    </div>
  </div>
<% end %>